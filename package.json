{
  "name": "wrapbox",
  "productName": "Wrapbox",
  "description": "An Electron wrapper for web pages",
  "version": "0.0.4",
  "license": "MIT",
  "author": "Peter Danis",
  "repository": {
    "type": "git",
    "url": "https://github.com/peterdanis/wrapbox"
  },
  "main": "app/app.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.peterdanis.wrapbox",
    "productName": "Wrapbox",
    "copyright": "Copyright Â© 2018 Peter Danis",
    "win": {
      "target": ["nsis", "portable", "zip"]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}_${version}_${env.platform}_Installer.${ext}"
    },
    "portable": {
      "artifactName": "${productName}_${version}_${env.platform}_Portable.${ext}"
    },
    "files": ["app/**"],
    "directories": {
      "output": "./release-builds"
    }
  },
  "dependencies": {
    "electron-updater": "^2.18.2"
  },
  "devDependencies": {
    "electron": "1.8.2-beta.3",
    "electron-builder": "^19.53.6",
    "electron-reload": "^1.2.2",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "prettier-eslint": "^8.7.4",
    "prettier-stylelint": "^0.4.2",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0"
  }
}
