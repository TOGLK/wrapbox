{
  "name": "wrapbox",
  "version": "0.2.1",
  "productName": "Wrapbox",
  "description": "An Electron wrapper for web pages",
  "license": "MIT",
  "author": "Peter Danis <peter.danis@outlook.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/peterdanis/wrapbox"
  },
  "homepage": "./",
  "main": "build/electron-main.js",
  "scripts": {
    "analyze": "source-map-explorer 'build/*.js'",
    "analyze:react": "source-map-explorer 'build/static/js/*.js'",
    "build": "npm run build:react && npm run build:electron && npm run build:app",
    "build:app": "electron-builder -p never",
    "build:electron": "tsc --p tsconfig.electron.json",
    "build:react": "react-scripts build",
    "cover": "npm run test:all -- --coverage",
    "dist": "electron-builder",
    "lint": "eslint ./src/**/*.{ts,tsx}",
    "pack": "electron-builder --dir",
    "start": "npm run build:electron && concurrently -k \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:electron": "electron .",
    "start:react": "react-scripts start",
    "test:all": "react-scripts test --watchAll=false src/*",
    "test": "react-scripts test src/*"
  },
  "dependencies": {
    "electron-log": "^4.1.2",
    "electron-store": "5.1.1",
    "electron-updater": "4.3.1"
  },
  "devDependencies": {
    "@material-ui/core": "4.9.12",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@types/puppeteer": "^2.0.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/uuid": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "concurrently": "^5.2.0",
    "electron": "8.2.5",
    "electron-builder": "22.6.0",
    "electron-devtools-installer": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "mdi-material-ui": "6.14.0",
    "prettier": "^2.0.5",
    "prettier-stylelint": "^0.4.2",
    "puppeteer-core": "3.0.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-scripts": "3.4.1",
    "source-map-explorer": "^2.4.2",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "typeface-roboto": "^0.0.75",
    "typescript": "^3.8.3",
    "uuid": "^8.0.0",
    "wait-on": "^4.0.2"
  },
  "browserslist": [
    "chrome 80"
  ],
  "build": {
    "extends": null,
    "appId": "com.peterdanis.wrapbox",
    "productName": "Wrapbox",
    "copyright": "Copyright Â© 2018 Peter Danis",
    "asar": false,
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "icons/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "artifactName": "${name}-${version}-mac.${ext}",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icons/icon.icns"
    },
    "linux": {
      "artifactName": "${name}-${version}.${ext}",
      "category": "Utility",
      "target": [
        "AppImage"
      ],
      "icon": "icons/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}_Installer.${ext}"
    },
    "portable": {
      "useZip": true,
      "artifactName": "${productName}_Portable.${ext}"
    },
    "dmg": {
      "artifactName": "${name}-${version}.${ext}",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 420,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "build/**"
    ],
    "directories": {
      "output": "./release-builds"
    }
  }
}
