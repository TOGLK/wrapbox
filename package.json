{
  "name": "wrapbox",
  "version": "0.2.1",
  "productName": "Wrapbox",
  "description": "An Electron wrapper for web pages",
  "license": "MIT",
  "author": "Peter Danis <peter.danis@outlook.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/peterdanis/wrapbox"
  },
  "homepage": "./",
  "main": "build/electron-main.js",
  "scripts": {
    "analyze": "source-map-explorer 'build/*.js'",
    "analyze:react": "source-map-explorer 'build/static/js/*.js'",
    "build": "yarn build:react && yarn build:electron && yarn build:app",
    "build:app": "electron-builder -p never",
    "build:electron": "tsc --p src/electron/",
    "build:react": "react-scripts build",
    "cover": "yarn test:all --coverage",
    "dist": "electron-builder",
    "lint": "eslint ./src/**/*.{ts,tsx}",
    "pack": "electron-builder --dir",
    "start": "yarn build:electron && concurrently -k \"yarn start:react\" \"wait-on http://localhost:3000 && yarn start:electron\"",
    "start:electron": "electron .",
    "start:react": "react-scripts start",
    "test:all": "react-scripts test --watchAll=false",
    "test": "react-scripts test"
  },
  "dependencies": {
    "electron-log": "^3.0.5",
    "electron-store": "4.0.0",
    "electron-updater": "4.0.14",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@material-ui/core": "^4.2.1",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.6.8",
    "@types/puppeteer": "^1.12.4",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "concurrently": "^4.1.1",
    "electron": "^5.0.7",
    "electron-builder": "^20.44.4",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^5.0.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^5.0.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-security": "^1.4.0",
    "prettier": "^1.16.4",
    "prettier-stylelint": "^0.4.2",
    "puppeteer-core": "^1.18.1",
    "react-scripts": "3.0.1",
    "source-map-explorer": "^2.0.1",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0",
    "typescript": "^3.5.3",
    "wait-on": "^3.3.0"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended",
      "plugin:security/recommended",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "react",
      "security"
    ],
    "rules": {
      "linebreak-style": "off",
      "quotes": [
        "warn",
        "double"
      ],
      "no-plusplus": "off",
      "comma-dangle": [
        "warn",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "always-multiline"
        }
      ],
      "react/jsx-filename-extension": [
        "warn",
        {
          "extensions": [
            ".jsx",
            ".tsx"
          ]
        }
      ],
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": true,
          "allowTypedFunctionExpressions": true
        }
      ],
      "@typescript-eslint/explicit-member-accessibility": [
        "error",
        {
          "accessibility": "no-public"
        }
      ],
      "prettier/prettier": [
        "warn",
        {
          "trailingComma": "all"
        }
      ],
      "sort-keys": [
        "warn",
        "asc",
        {
          "caseSensitive": false,
          "natural": true
        }
      ],
      "sort-imports": [
        "warn",
        {
          "ignoreCase": true,
          "ignoreDeclarationSort": false,
          "ignoreMemberSort": false,
          "memberSyntaxSortOrder": [
            "none",
            "all",
            "multiple",
            "single"
          ]
        }
      ],
      "import/order": [
        "error",
        {
          "groups": [],
          "newlines-between": "never"
        }
      ]
    },
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      },
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      },
      "import/core-modules": [
        "electron"
      ]
    },
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "node": true
    },
    "overrides": [
      {
        "files": [
          "**/mocks/*.js",
          "**/*.spec.js",
          "**/*.test.js"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "global-require": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      "chrome 73"
    ],
    "development": [
      "chrome 73"
    ]
  },
  "build": {
    "extends": null,
    "appId": "com.peterdanis.wrapbox",
    "productName": "Wrapbox",
    "copyright": "Copyright Â© 2018 Peter Danis",
    "asar": false,
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "icons/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "artifactName": "${name}-${version}-mac.${ext}",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icons/icon.icns"
    },
    "linux": {
      "artifactName": "${name}-${version}.${ext}",
      "category": "Utility",
      "target": [
        "AppImage"
      ],
      "icon": "icons/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}_Installer.${ext}"
    },
    "portable": {
      "useZip": true,
      "artifactName": "${productName}_Portable.${ext}"
    },
    "dmg": {
      "artifactName": "${name}-${version}.${ext}",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 420,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "build/**"
    ],
    "directories": {
      "output": "./release-builds"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "singleQuote": false
  }
}
