{
  "extends": ["airbnb", "plugin:jest/recommended"],
  "rules": {
    "linebreak-style": "off",
    "quotes": ["warn", "double"],
    "no-plusplus": "off",
    "comma-dangle": [
      "warn",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true
  },
  "overrides": [
    {
      "files": ["**/mocks/*.js", "**/*.spec.js", "**/*.test.js"],
      "env": { "jest": true },
      "rules": {
        "global-require": "off"
      }
    }
  ]
}
