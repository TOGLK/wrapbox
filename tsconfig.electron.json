{
  "compilerOptions": {
    "target": "es2018",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": "./build",
    "sourceMap": false
  },
  "include": ["src/electron"],
  "exclude": ["node_modules"]
}
